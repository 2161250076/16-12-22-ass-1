str1=input('enter a string')
length=len(str1)
print('number of characters of the given string',length)
str2=input('enter a string in lower case letters')
print(str2.upper())
str3=input('enter a string in upper case letters')
print(str3.lower())
str4=input('enter a string in both upper and lower case letters')
print(str4.upper())
print(str4.lower())
